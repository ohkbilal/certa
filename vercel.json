{
  "version": 2,
  "name": "certa-saas",
  "alias": ["certa.app", "www.certa.app"],
  
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/billing/(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/webhook/(.*)",
      "dest": "/src/index.js"
    },
    {
      "src": "/health",
      "dest": "/src/index.js"
    },
    {
      "src": "/assess",
      "dest": "/public/certa-engine.html"
    },
    {
      "src": "/app",
      "dest": "/public/certa-engine.html"
    },
    {
      "src": "/",
      "dest": "/public/landing.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  
  "env": {
    "NODE_ENV": "production"
  },
  
  "regions": ["iad1", "sfo1", "cdg1", "sin1"],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 0 * * *"
    }
  ],
  
  "functions": {
    "src/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
